<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/white_bg"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingBottom="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp">

        <ImageView
            android:id="@+id/img_dialog_bar_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/bmi_calc_logo"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/img_dialog_bar_logo"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/navy_blue"
            android:textSize="24sp"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gender_bg_white_sc"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp">

        <TextView
            android:id="@+id/txt_dialog_bmi_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_regular"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_dialog_bmi_show_bmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="72sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/ubuntu_light"
            android:gravity="center"
            android:text="kg/mÂ²"
            android:textColor="@color/gray"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/txt_dialog_bmi_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="32sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="Health Suggestion"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txt_dialog_bmi_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lineHeight="28sp"
        android:fontFamily="@font/ubuntu_light"
        android:textColor="@color/gray"
        android:textSize="20sp"
        tools:ignore="UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dialog_bmi_pos"
        style="@style/borderless_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_btn_bg"
        android:fontFamily="@font/ubuntu_regular"
        android:text="Okay"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

</LinearLayout>