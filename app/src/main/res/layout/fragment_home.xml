<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_sc"
    android:scrollbarThumbVertical="@android:color/transparent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_bg"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Gender"
                android:textColor="@color/gray"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/ll_btn_male"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gender_bg_white_sc"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img_male_btn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="5dp"
                        android:src="@drawable/ic_male_unchecked" />

                    <TextView
                        android:id="@+id/txt_male_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_light"
                        android:gravity="center"
                        android:text="Male"
                        android:textColor="@color/navy_blue"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_btn_female"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gender_bg_white_sc"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img_female_btn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="5dp"
                        android:src="@drawable/ic_female_unchecked" />

                    <TextView
                        android:id="@+id/txt_female_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_light"
                        android:gravity="center"
                        android:text="Female"
                        android:textColor="@color/navy_blue"
                        android:textSize="24sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_bg"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Age"
                android:textColor="@color/gray"
                android:textSize="26sp" />

            <!-- Age -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:cardBackgroundColor="@color/white_sc"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/gender_bg_white_sc">

                    <ImageView
                        android:id="@+id/img_btn_age_dec"
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/inc_dec_ripple"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:src="@drawable/ic_angle_left"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/txt_show_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="20"
                        android:textColor="@color/blue"
                        android:textSize="48sp" />

                    <ImageView
                        android:id="@+id/img_btn_age_inc"
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/inc_dec_ripple"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:src="@drawable/ic_angle_right"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_bg"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Weight"
                android:textColor="@color/gray"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Weight in kg -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white_sc"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/gender_bg_white_sc">

                        <ImageView
                            android:id="@+id/img_btn_weight_kg_dec"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/inc_dec_ripple"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="16dp"
                            android:src="@drawable/ic_angle_left"
                            tools:ignore="ContentDescription" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/txt_show_weight_kg"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/ubuntu_medium"
                                android:gravity="center"
                                android:text="50"
                                android:textColor="@color/blue"
                                android:textSize="48sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:fontFamily="@font/ubuntu_light"
                                android:text="kg"
                                android:textColor="@color/gray"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_btn_weight_kg_inc"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/inc_dec_ripple"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="16dp"
                            android:src="@drawable/ic_angle_right"
                            tools:ignore="ContentDescription" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Weight in gm -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white_sc"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/gender_bg_white_sc">

                        <ImageView
                            android:id="@+id/img_btn_weight_gm_dec"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/inc_dec_ripple"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="16dp"
                            android:src="@drawable/ic_angle_left"
                            tools:ignore="ContentDescription" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/txt_show_weight_gm"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/ubuntu_medium"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/blue"
                                android:textSize="48sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:fontFamily="@font/ubuntu_light"
                                android:text="g"
                                android:textColor="@color/gray"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_btn_weight_gm_inc"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/inc_dec_ripple"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="16dp"
                            android:src="@drawable/ic_angle_right"
                            tools:ignore="ContentDescription" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="105dp"
            android:background="@drawable/white_bg"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Height"
                android:textColor="@color/gray"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Weight in kg -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white_sc"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/gender_bg_white_sc">

                        <ImageView
                            android:id="@+id/img_btn_height_ft_dec"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/inc_dec_ripple"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="16dp"
                            android:src="@drawable/ic_angle_left"
                            tools:ignore="ContentDescription" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/txt_show_height_ft"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/ubuntu_medium"
                                android:gravity="center"
                                android:text="5"
                                android:textColor="@color/blue"
                                android:textSize="48sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:fontFamily="@font/ubuntu_light"
                                android:text="ft"
                                android:textColor="@color/gray"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_btn_height_ft_inc"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/inc_dec_ripple"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="16dp"
                            android:src="@drawable/ic_angle_right"
                            tools:ignore="ContentDescription" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Weight in gm -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white_sc"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/gender_bg_white_sc">

                        <ImageView
                            android:id="@+id/img_btn_height_in_dec"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/inc_dec_ripple"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="16dp"
                            android:src="@drawable/ic_angle_left"
                            tools:ignore="ContentDescription" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/txt_show_height_in"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/ubuntu_medium"
                                android:gravity="center"
                                android:text="6"
                                android:textColor="@color/blue"
                                android:textSize="48sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:fontFamily="@font/ubuntu_light"
                                android:text="in"
                                android:textColor="@color/gray"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_btn_height_in_inc"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/inc_dec_ripple"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="16dp"
                            android:src="@drawable/ic_angle_right"
                            tools:ignore="ContentDescription" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>